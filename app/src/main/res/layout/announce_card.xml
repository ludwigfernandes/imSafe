<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="125dp">


    <TextView
        android:layout_width="200dp"
        android:id="@+id/announceName"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:text="Self Defense Course"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/announceDatePic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/announceName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/ic_baseline_calendar"/>

    <TextView
        android:id="@+id/announceDate"
        android:layout_toEndOf="@+id/announceDatePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/announceName"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="03 March 2024, Sunday"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/announceTimePic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/announceDate"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/ic_baseline_time"/>

    <TextView
        android:id="@+id/announceTime"
        android:layout_toEndOf="@+id/announceTimePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/announceDate"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="4-6 p.m."
        android:textSize="16sp"/>


    <ImageView
        android:id="@+id/announceLocationPic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/announceTime"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/ic_baseline_location"/>

    <TextView
        android:id="@+id/announceLocation"
        android:layout_toEndOf="@+id/announceLocationPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/announceTime"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Panjim Bus Stand"
        android:textSize="16sp"/>



    <ImageView
        android:id="@+id/announceMainPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/announceDate"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/img"/>


    <TextView
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>


</RelativeLayout>


